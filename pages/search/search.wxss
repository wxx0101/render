page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column; 
}
.search_box{
    width: 100%;
    height: 130rpx;
    display: flex;
}
.search_box input{
    width: 80%;
    height: 100rpx;
    margin: 2%;
    background: #eee;
    border-radius: 20rpx;
    padding-left: 3%;
    font-size: 35rpx;
}
.search_box button{
  width: 15%;
  height: 80%;
  margin: 2% 0;
}
.content{
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: column;
}
.content text{
  width: 90%;
  height: 80rpx;
  margin: 0 5%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 2%;
  line-height: 80rpx;
  border-radius: 20rpx;
}
.content text.show{
  background: palegreen;
}